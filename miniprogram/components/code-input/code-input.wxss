/* 验证码输入组件样式 */
.code-input {
  position: relative;
  width: 100%;
}

/* 隐藏的真实输入框 */
.hidden-input {
  position: absolute;
  top: -9999rpx;
  left: -9999rpx;
  opacity: 0;
}

/* 验证码框容器 */
.code-boxes {
  display: flex;
  justify-content: center;
  gap: 24rpx;
}

/* 单个验证码框 */
.code-box {
  position: relative;
  width: 100rpx;
  height: 100rpx;
  border: 2rpx solid #E5E5E5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #FFFFFF;
  transition: all 0.3s ease;
}

/* 激活状态的验证码框 */
.code-box.active {
  border-color: #FF6B00;
  box-shadow: 0 0 0 2rpx rgba(255, 107, 0, 0.2);
}

/* 验证码文字 */
.code-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #333333;
}

/* 光标 */
.code-cursor {
  position: absolute;
  width: 2rpx;
  height: 48rpx;
  background-color: #FF6B00;
  animation: blink 1s infinite;
}

/* 光标闪烁动画 */
@keyframes blink {
  0%, 49% {
    opacity: 1;
  }
  50%, 100% {
    opacity: 0;
  }
}
