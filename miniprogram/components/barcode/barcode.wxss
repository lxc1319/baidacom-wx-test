/* 条形码展示组件样式 */
.barcode {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 条形码画布 */
.barcode-canvas {
  background-color: #FFFFFF;
}

/* 条形码文字 */
.barcode-text {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #333333;
  font-family: monospace;
  letter-spacing: 2rpx;
}

/* 长按提示 */
.barcode-tip {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #999999;
}
