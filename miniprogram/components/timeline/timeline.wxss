/* 时间轴组件样式 */
.timeline {
  padding: 24rpx;
}

/* 时间轴项 */
.timeline-item {
  display: flex;
  position: relative;
  padding-bottom: 32rpx;
}

.timeline-item:last-child {
  padding-bottom: 0;
}

/* 时间轴节点 */
.timeline-node {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 24rpx;
}

/* 节点圆点 */
.node-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background-color: #E5E5E5;
  border: 4rpx solid #FFFFFF;
  box-shadow: 0 0 0 2rpx #E5E5E5;
  z-index: 2;
}

/* 激活状态的节点（第一个节点） */
.node-dot.active {
  background-color: #FF6B00;
  box-shadow: 0 0 0 2rpx #FF6B00;
}

/* 节点连接线 */
.node-line {
  width: 2rpx;
  flex: 1;
  background-color: #E5E5E5;
  margin-top: 8rpx;
  min-height: 60rpx;
}

/* 时间轴内容 */
.timeline-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

/* 时间 */
.content-time {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.5;
}

/* 事件内容 */
.content-text {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
  word-break: break-all;
}

/* 节点信息 */
.content-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 24rpx;
  color: #666666;
  line-height: 1.5;
}

.info-dept {
  color: #666666;
}

.info-user {
  color: #999999;
}

/* 空状态 */
.timeline-empty {
  padding: 80rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #999999;
}
