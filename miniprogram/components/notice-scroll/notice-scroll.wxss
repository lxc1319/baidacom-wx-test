/* 滚动通知组件样式 */
.notice-scroll {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background-color: #FFF8DC;
  border-radius: 8rpx;
  margin: 16rpx 24rpx;
}

/* 左侧喇叭图标 */
.notice-icon {
  flex-shrink: 0;
  margin-right: 16rpx;
}

.icon-speaker {
  font-size: 32rpx;
  color: #FF6B00;
}

/* 中间滚动文字区域 */
.notice-content {
  flex: 1;
  height: 48rpx;
  overflow: hidden;
}

.notice-swiper {
  width: 100%;
  height: 100%;
}

.notice-text {
  font-size: 28rpx;
  color: #333333;
  line-height: 48rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 右侧箭头图标 */
.notice-arrow {
  flex-shrink: 0;
  margin-left: 16rpx;
}

.icon-arrow {
  font-size: 40rpx;
  color: #999999;
  font-weight: bold;
}
