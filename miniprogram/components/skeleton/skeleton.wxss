/* 骨架屏样式 */
.skeleton-container {
  width: 100%;
  background-color: #F5F5F5;
  padding: 24rpx;
}

/* 骨架屏动画 */
@keyframes skeleton-loading {
  0% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0 50%;
  }
}

.skeleton-banner,
.skeleton-search,
.skeleton-tab,
.skeleton-line {
  background: linear-gradient(
    90deg,
    #F0F0F0 25%,
    #E0E0E0 50%,
    #F0F0F0 75%
  );
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
  border-radius: 8rpx;
}

/* 轮播图骨架 */
.skeleton-banner {
  width: 100%;
  height: 400rpx;
  margin-bottom: 24rpx;
}

/* 搜索框骨架 */
.skeleton-search {
  width: 100%;
  height: 80rpx;
  margin-bottom: 24rpx;
}

/* 标签页骨架 */
.skeleton-tabs {
  display: flex;
  gap: 32rpx;
  margin-bottom: 24rpx;
}

.skeleton-tab {
  flex: 1;
  height: 60rpx;
}

/* 列表骨架 */
.skeleton-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.skeleton-item {
  background-color: #FFFFFF;
  padding: 24rpx;
  border-radius: 16rpx;
}

.skeleton-line {
  height: 32rpx;
  margin-bottom: 16rpx;
}

.skeleton-line:last-child {
  margin-bottom: 0;
}

.skeleton-line-title {
  width: 60%;
  height: 40rpx;
}

.skeleton-line-text {
  width: 100%;
}

.skeleton-line-text.short {
  width: 40%;
}
