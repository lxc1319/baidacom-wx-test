/* 加载组件样式 */
.loading {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

/* 全屏模式 */
.loading.fullscreen {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
}

/* 遮罩层 */
.loading-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.3);
}

/* 加载内容 */
.loading-content {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.7);
  padding: 40rpx;
  border-radius: 16rpx;
}

/* 加载动画 */
.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  position: relative;
}

.spinner-circle {
  width: 100%;
  height: 100%;
  border: 6rpx solid rgba(255, 255, 255, 0.2);
  border-top-color: #FFFFFF;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

/* 旋转动画 */
@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

/* 加载文字 */
.loading-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #FFFFFF;
  text-align: center;
}
