/* pages/waybill-detail/waybill-detail.wxss */

/* 页面容器 */
.waybill-detail-page {
  min-height: 100vh;
  background-color: #F5F5F5;
}

/* 标签页导航 - 左对齐 */
.tab-nav {
  display: flex;
  background-color: #FFFFFF;
  padding: 0 24rpx;
}

.tab-item {
  position: relative;
  padding: 24rpx 0;
  margin-right: 48rpx;
}

.tab-text {
  font-size: 28rpx;
  color: #666666;
}

.tab-item.active .tab-text {
  color: #333333;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 4rpx;
  background-color: #E53935;
}

/* 标签页内容 */
.tab-content {
  padding: 20rpx;
}

.tab-panel {
  background-color: #FFFFFF;
  border-radius: 8rpx;
}

/* 电子存根内容 */
.stub-content {
  display: flex;
  flex-direction: column;
}

/* 条形码区域 */
.barcode-section {
  display: flex;
  padding: 0;
  border-bottom: 1rpx solid #EEEEEE;
}

.barcode-wrapper {
  flex: 3;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 24rpx;
}

/* 条形码组件样式覆盖 */
.barcode-wrapper .barcode {
  padding: 0;
  background-color: transparent;
}

.barcode-wrapper .barcode-canvas {
  border: none;
  border-radius: 0;
}

.barcode-img {
  width: 100%;
  height: 100rpx;
}

.barcode-divider {
  width: 1rpx;
  background-color: #EEEEEE;
  margin: 0;
}

.barcode-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 20rpx 24rpx;
}

.dest-text {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 12rpx;
}

.bill-text {
  font-size: 26rpx;
  color: #666666;
}

/* 寄件方/收件方区域 */
.info-section {
  padding: 16rpx 24rpx;
  border-bottom: 1rpx solid #EEEEEE;
}

.section-label {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.info-left {
  display: flex;
  align-items: center;
}

.icon-circle {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
  color: #FFFFFF;
  margin-right: 12rpx;
}

.icon-circle.gray {
  background-color: #666666;
}

.icon-circle.red {
  background-color: #E53935;
}

.info-name {
  font-size: 28rpx;
  color: #333333;
}

.info-right {
  display: flex;
  align-items: center;
}

.info-phone {
  font-size: 28rpx;
  color: #333333;
  margin-right: 12rpx;
}

.eye-icon {
  width: 44rpx;
  height: 44rpx;
  background-size: 32rpx 32rpx;
  background-repeat: no-repeat;
  background-position: center;
}

/* 睁眼图标 - 手机号隐藏状态 */
