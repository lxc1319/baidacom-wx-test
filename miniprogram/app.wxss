/**app.wxss**/
/* 全局样式 */

/* 页面容器 */
page {
  background: #F5F5F5;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

/* 通用容器 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  min-height: 100vh;
}

/* 按钮重置 */
button {
  background: initial;
  padding: 0;
  margin: 0;
  border: none;
}

button:focus {
  outline: 0;
}

button::after {
  border: none;
}

/* 通用按钮样式 */
.btn-primary {
  background-color: #FFD700;
  color: #333333;
  border-radius: 8rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.btn-secondary {
  background-color: #FFFFFF;
  color: #666666;
  border: 1rpx solid #D9D9D9;
  border-radius: 8rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
}

/* 卡片样式 */
.card {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 文字颜色 */
.text-primary {
  color: #333333;
}

.text-secondary {
  color: #666666;
}

.text-muted {
  color: #999999;
}

.text-danger {
  color: #FF0000;
}

.text-warning {
  color: #FF6B00;
}

.text-success {
  color: #52C41A;
}

/* 文字大小 */
.text-xs {
  font-size: 24rpx;
}

.text-sm {
  font-size: 28rpx;
}

.text-base {
  font-size: 32rpx;
}

.text-lg {
  font-size: 36rpx;
}

.text-xl {
  font-size: 40rpx;
}

/* 文字对齐 */
.text-left {
  text-align: left;
}

.text-center {
  text-align: center;
}

.text-right {
  text-align: right;
}

/* 间距 */
.mt-8 {
  margin-top: 8rpx;
}

.mt-16 {
  margin-top: 16rpx;
}

.mt-24 {
  margin-top: 24rpx;
}

.mt-32 {
  margin-top: 32rpx;
}

.mb-8 {
  margin-bottom: 8rpx;
}

.mb-16 {
  margin-bottom: 16rpx;
}

.mb-24 {
  margin-bottom: 24rpx;
}

.mb-32 {
  margin-bottom: 32rpx;
}

.p-16 {
  padding: 16rpx;
}

.p-24 {
  padding: 24rpx;
}

.p-32 {
  padding: 32rpx;
}

/* Flex布局 */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-row {
  flex-direction: row;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-1 {
  flex: 1;
}

/* 空状态 */
.empty-state {
  padding: 80rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #999999;
}

/* 加载状态 */
.loading-state {
  padding: 40rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #999999;
}